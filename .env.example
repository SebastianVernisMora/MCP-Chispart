# --- MCP / Agents ---

# Intervalo de polling (ms) para adaptadores
MCP_POLL_MS=1500

# --- Blackbox (AI provider) ---
# Endpoint y API Key (no compartas tu key real)
BLACKBOX_API_URL="https://api.blackbox.ai/v1/chat/completions"
# Reemplaza con tu clave real; deja vacío si no lo usas
BLACKBOX_API_KEY=""

# Modelos recomendados (ajusta a los IDs disponibles en tu cuenta)
# Análisis/plan: 64K contexto, buen razonamiento
BLACKBOX_MODEL="blackboxai/anthropic/claude-3.7-sonnet"
BLACKBOX_MODEL_TASK="blackboxai/anthropic/claude-3.7-sonnet"
# Changeset/código: usa también Sonnet 3.7 en este proveedor
BLACKBOX_MODEL_CHANGE="blackboxai/anthropic/claude-3.7-sonnet"
# Resúmenes/estado: rápido y barato
BLACKBOX_MODEL_SUMMARY="blackboxai/anthropic/claude-3.5-haiku-20241022"

# Parámetros opcionales de generación
BLACKBOX_TEMPERATURE=0.2
BLACKBOX_TOP_P=0.9
BLACKBOX_MAX_TOKENS=2048

# --- Qwen CLI ---
# Define el binario y los argumentos por defecto
QWEN_CLI_CMD="qwen"
QWEN_CLI_ARGS="chat -m Qwen2.5-72B-Instruct"

# --- Mistral (API nativa) ---
# Endpoint y API Key de Mistral/Codestral (si usas el agente nativo)
MISTRAL_API_URL="https://codestral.mistral.ai/v1/chat/completions"
# Reemplaza con tu clave real; deja vacío si no lo usas
MISTRAL_API_KEY=""
# Opcional: endpoint Codestral (FIM) para generación de código
MISTRAL_CODESTRAL_URL="https://codestral.mistral.ai/v1/fim/completions"
MISTRAL_USE_CODESTRAL=true
# Modelos (ajusta a tu cuenta):
MISTRAL_MODEL="mistral-large-latest"
MISTRAL_MODEL_TASK="mistral-large-latest"
MISTRAL_MODEL_CHANGE="codestral-latest"
MISTRAL_MODEL_SUMMARY="mistral-small-latest"
MISTRAL_TEMPERATURE=0.2
MISTRAL_TOP_P=0.9
MISTRAL_MAX_TOKENS=2048
